<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/birutua"
    tools:context="id.co.outlabs.adhi.arkanfotoclient.GagalKoneksiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/putih"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Yah, internetnya mati..."/>

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/gagalkonek" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/putih"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Cek koneksi wifi atau kuota mu ya..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btngagalcobalagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COBA LAGI"
            android:background="@drawable/strokeputih"
            android:textColor="@color/putih"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:padding="5dp"/>
        <Button
            android:id="@+id/btngagalpengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUKA PENGATURAN"
            android:background="@drawable/roundedkecil"
            android:textColor="@color/putih"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:padding="5dp"/>

    </LinearLayout>
</LinearLayout>
