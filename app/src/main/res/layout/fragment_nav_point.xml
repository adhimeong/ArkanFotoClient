<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/birutua"
    android:orientation="vertical"
    tools:context="id.co.outlabs.adhi.arkanfotoclient.NavPointFragment">

    <LinearLayout
        android:layout_marginTop="-100dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/backgroundmain"
        android:orientation="vertical"
        android:transitionName="backgoundtransition"
        android:elevation="1dp">
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/mendali">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:text="16"
            android:layout_gravity="center"
            android:textColor="@color/kuning"
            android:textStyle="bold"/>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/pointminta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Point"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/putih"
                android:background="@drawable/sharehijau"/>

            <Button
                android:id="@+id/pointberi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beri Point ke Pengguna lain"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/putih"
                android:background="@drawable/roundedkuing"/>

            <Button
                android:id="@+id/pointcari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berburu Point"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/putih"
                android:background="@drawable/roundedmerah"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
