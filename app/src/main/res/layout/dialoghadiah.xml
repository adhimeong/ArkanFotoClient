<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/birutua"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/kuning"
                android:padding="8dp">
                <TextView
                    android:id="@+id/dialoghadiahketerangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="keterangan"
                    android:textColor="@color/putih"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="24sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/dialoghadiahimage"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                app:srcCompat="@drawable/dialoggift" />

            <Button
                android:id="@+id/dialoghadiahambil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ambil Hadiahnya"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/putih"
                android:background="@drawable/roundedkecil"/>

            <Button
                android:id="@+id/dialoghadiahclose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="40dp"
                android:textColor="@color/kuning"
                android:background="@drawable/roundedkecilputih"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
