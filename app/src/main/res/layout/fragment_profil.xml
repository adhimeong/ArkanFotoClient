<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/birutua"
    tools:context="id.co.outlabs.adhi.arkanfotoclient.ProfilFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="-100dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/backgroundmain"
        android:orientation="vertical"
        android:transitionName="backgoundtransition"
        android:elevation="1dp">
    </LinearLayout>

    <ScrollView
        android:id="@+id/l3"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/profilprevimage"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="28dp"/>

                    <!-- TODO: Update blank fragment layout -->
                    <TextView
                        android:id="@+id/txtprofilnokartu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Id Anggota"
                        android:textColor="@color/colorAccent"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/txtprofilnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Nama :"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/txtprofilemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Email :"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/txtprofilkontak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Kontak :"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/txtprofilalamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:text="Alamat :"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"/>

                    <Button
                        android:id="@+id/btnupdateprofil"
                        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Profil" />

                    <Button
                        android:id="@+id/btnlogout"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOGOUT" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
