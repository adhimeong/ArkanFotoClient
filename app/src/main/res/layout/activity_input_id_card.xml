<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/birutua"
    android:padding="30dp"
    tools:context="id.co.outlabs.adhi.arkanfotoclient.InputIdCardActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Kartumu Sekarang"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/scancard"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dengan menekan tombol dibawah ini"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/scankartu"
        app:rb_color="@color/kuning"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_duration="3000"
        app:rb_scale="6">

        <android.support.v7.widget.CardView
            android:id="@+id/cardbtnscancard"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/kuning"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/qrcodeputih"/>
        </android.support.v7.widget.CardView>

    </com.skyfishjy.library.RippleBackground>

</LinearLayout>
