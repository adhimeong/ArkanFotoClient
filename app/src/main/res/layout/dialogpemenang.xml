<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/dialogpemenangfoto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dialogpemenangjudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/birutua"
                    android:text="Judul"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dialogpemenangtanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/kuning"
                    android:text="tanggal"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/dialogpemenangisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="isi"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/dialogpemenangtutup"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:text="X"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/putih"
                    android:background="@drawable/roundyellow"
                    android:layout_gravity="right|bottom"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
